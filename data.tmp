################################################################################
# Les Data sont les fichiers terraform utilisés comme des données présentes dans
# le système actuelle (ici cette policy sera interprêtée en JSON pour créer des permissions)
################################################################################

data "aws_iam_policy_document" "restrict_ecr_policy_for_ci" {
  statement {
    sid    = "1"
    effect = "Allow"
    actions = [
      "ecr:GetDownloadUrlForLayer",
      "ecr:BatchGetImage",
      "ecr:BatchCheckLayerAvailability",
      "ecr:PutImage",
      "ecr:InitiateLayerUpload",
      "ecr:UploadLayerPart",
      "ecr:CompleteLayerUpload",
      "ecr:GetAuthorizationToken"
    ]

    principals {
      type        = "*"
      identifiers = ["*"]
    }
  }
}